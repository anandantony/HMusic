{
    "compilerOptions": {
        "target" : "es2017",
        "module" : "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "allowJs": true,
         "types": [
            "node"
         ],
         "typeRoots": [
            "node_modules/@types"
         ],
        "outDir": "build",
        "rootDirs": ["src", "test"]
    },
    "include": [
        "typings/index.d.ts",
        "src/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}